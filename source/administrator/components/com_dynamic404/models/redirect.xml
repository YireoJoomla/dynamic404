<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="item">
        <fieldset name="source">
            <field name="match" type="text" class="inputbox" size="50"
                label="COM_DYNAMIC404_REDIRECT_FIELD_MATCH"
                description="COM_DYNAMIC404_REDIRECT_FIELD_MATCH_DESC"
            />
            <field name="type" type="list" default="full_url" 
                label="COM_DYNAMIC404_REDIRECT_FIELD_TYPE" required="1">
                <option value="full_url">COM_DYNAMIC404_REDIRECT_FIELD_TYPE_OPTION_FULL_URL</option>
                <option value="last_segment">COM_DYNAMIC404_REDIRECT_FIELD_TYPE_OPTION_LAST_SEGMENT</option>
                <option value="any_segment">COM_DYNAMIC404_REDIRECT_FIELD_TYPE_OPTION_ANY_SEGMENT</option>
                <option value="fuzzy">COM_DYNAMIC404_REDIRECT_FIELD_TYPE_OPTION_FUZZY</option>
            </field>
        </fieldset>

        <fieldset name="destination">
            <field name="url" type="text" class="inputbox" size="50"
                label="COM_DYNAMIC404_REDIRECT_FIELD_URL"
                description="COM_DYNAMIC404_REDIRECT_FIELD_URL_DESC" 
            />
            <field name="http_status" type="list" default="full_url" 
                label="COM_DYNAMIC404_REDIRECT_FIELD_HTTP_STATUS" required="1">
                <option value="301">COM_DYNAMIC404_REDIRECT_FIELD_HTTP_STATUS_OPTION_301</option>
                <option value="302">COM_DYNAMIC404_REDIRECT_FIELD_HTTP_STATUS_OPTION_302</option>
                <option value="303">COM_DYNAMIC404_REDIRECT_FIELD_HTTP_STATUS_OPTION_303</option>
                <option value="307">COM_DYNAMIC404_REDIRECT_FIELD_HTTP_STATUS_OPTION_307</option>
            </field>
        </fieldset>

        <fieldset name="other" label="COM_DYNAMIC404_REDIRECT_FIELDSET_OTHER">
            <field name="description" type="text" 
                label="COM_DYNAMIC404_REDIRECT_FIELD_DESCRIPTION"
                description="COM_DYNAMIC404_REDIRECT_FIELD_DESCRIPTION_DESC" />
            <field name="published" type="radio" default="1" class="btn-group jpublished"
                label="JPUBLISHED" required="1">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
        </fieldset>
    </fields>
    <fields name="params">
        <fieldset name="params">
            <field name="redirect" type="radio" default="0" class="btn-group"
                label="COM_DYNAMIC404_REDIRECT_FIELD_REDIRECT" 
                description="COM_DYNAMIC404_REDIRECT_FIELD_REDIRECT_DESC" 
                >
                <option value="0">JDEFAULT</option>
                <option value="1">JYES</option>
            </field>
            <field name="match_case" type="list" default="0" 
                label="COM_DYNAMIC404_REDIRECT_PARAM_MATCH_CASE" 
                description="COM_DYNAMIC404_REDIRECT_PARAM_MATCH_CASE_DESC">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
                <option value="2">JDEFAULT</option>
            </field>
            <field name="show_description" type="list" default="0" 
                label="COM_DYNAMIC404_REDIRECT_PARAM_SHOW_DESCRIPTION" 
                description="COM_DYNAMIC404_REDIRECT_PARAM_MATCH_SHOW_DESCRIPTION">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
                <option value="2">JDEFAULT</option>
            </field>
            <field name="rating" type="text" default="" 
                label="COM_DYNAMIC404_REDIRECT_PARAM_RATING" 
                description="COM_DYNAMIC404_REDIRECT_PARAM_MATCH_RATING" />
        </fieldset>
    </fields>
</form>

    <version>1.2.1</version>
    <description>PLG_DYNAMIC404_K2_DESC</description>

    <files>
        <filename plugin="k2">k2.php</filename>
        <filename>index.html</filename>
    </files>

    <languages>
        <language tag="en-GB">en-GB.plg_dynamic404_k2.ini</language>
        <language tag="en-GB">en-GB.plg_dynamic404_k2.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="rating" type="text" default="85" size="4" label="PLG_DYNAMIC404_K2_FIELD_RATING" description="PLG_DYNAMIC404_K2_FIELD_RATING_DESC" />
                <field name="search_items" type="list" default="1" label="PLG_DYNAMIC404_K2_FIELD_SEARCH_ITEMS" description="PLG_DYNAMIC404_K2_FIELD_SEARCH_ITEMS_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="search_categories" type="list" default="0" label="PLG_DYNAMIC404_K2_FIELD_SEARCH_CATEGORIES" description="PLG_DYNAMIC404_K2_FIELD_SEARCH_CATEGORIES_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="exclude_items" type="text" default="" label="PLG_DYNAMIC404_K2_FIELD_EXCLUDE_ITEMS" description="PLG_DYNAMIC404_K2_FIELD_EXCLUDE_ITEMS_DESC" />
                <field name="exclude_categories" type="text" default="" label="PLG_DYNAMIC404_K2_FIELD_EXCLUDE_CATEGORIES" description="PLG_DYNAMIC404_K2_FIELD_EXCLUDE_CATEGORIES_DESC" />
            </fieldset>
        </fields>
    </config>

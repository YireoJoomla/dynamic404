    <files>
        <filename plugin="virtuemart">virtuemart.php</filename>
        <filename>index.html</filename>
    </files>

    <languages>
        <language tag="en-GB">en-GB.plg_dynamic404_virtuemart.ini</language>
        <language tag="en-GB">en-GB.plg_dynamic404_virtuemart.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="vm_version" type="list" default="3" class="btn-group"
                    label="PLG_DYNAMIC404_VIRTUEMART_FIELD_VM_VERSION"
                    description="PLG_DYNAMIC404_VIRTUEMART_FIELD_VM_VERSION_DESC">

                    <option value="3">VirtueMart 3</option>
                </field>
                <field name="rating" type="text" default="85" size="4" label="PLG_DYNAMIC404_VIRTUEMART_FIELD_RATING" description="PLG_DYNAMIC404_VIRTUEMART_FIELD_RATING_DESC" />

	<version>1.0.0</version>
	<description>PLG_WATCHFULLIAPPS_DYNAMIC404_DESC</description>

	<files>
		<filename plugin="dynamic404">dynamic404.php</filename>
		<filename>index.html</filename>
	</files>

    <languages>
        <language tag="en-GB">en-GB.plg_watchfulliApps_dynamic404.ini</language>
        <language tag="en-GB">en-GB.plg_watchfulliApps_dynamic404.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="check_enable_redirect" type="radio" default="1" label="PLG_WATCHFULLIAPPS_DYNAMIC404_FIELD_CHECK_ENABLE_REDIRECT" 
                    description="PLG_WATCHFULLIAPPS_DYNAMIC404_FIELD_CHECK_ENABLE_REDIRECT_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
            </fieldset>
        </fields>
    </config>

    <updateservers>
        <server type="extension" priority="1" name="plg_watchfulliapps_dynamic404">http://www.yireo.com/updates/plg_watchfulliapps_dynamic404.xml</server>
    </updateservers>
